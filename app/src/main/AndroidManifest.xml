            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".LoginAndRegister.RegisterActivity"></activity>
        <activity android:name=".addbusiness.StoreRegistration" />
        <activity android:name=".activity.NavigationDrawerHome"/>
    </application>


</manifest>